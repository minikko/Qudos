/*==============================
	Header
==============================*/
.header
	position fixed
	top 0
	left 0
	width 100%
	z-index 99
	transition(.4s)
	background-color $white
	&__content
		flexbox flex
		flex-direction row
		justify-content space-between
		align-items center
		height 88px
		position relative
		transition(.4s)
	&__logo
		position relative
		display block
		cursor pointer
		object
			width 122px
			transition(.4s)
	&__nav
		position fixed
		top 0
		bottom 0
		width 100%
		background-color $white
		right 0
		transform(translate3d(100%, 0, 0))
		transition(.3s)
		display flex
		flex-direction column
		justify-content center
		align-items center
		z-index 3
		&--active
			transform(translate3d(0, 0, 0))
		a
			font-size 16px
			font-weight 500
			color #0f1423
			margin-bottom 20px
			&:last-child
				margin-bottom 0
			&:hover
				color #0f1423
	&__social
		flexbox flex
		flex-direction row
		justify-content center
		align-items center
		position relative
		border-top 2px solid #000
		padding 20px 10px 0
		margin-top 20px
		a
			margin 0 5px
			font-size 18px
	&__btn
		flexbox flex
		flex-direction row
		justify-content center
		align-items center
		height 36px
		width 130px
		color $white
		font-size 13px
		border-radius(4px)
		text-align center
		background-image -moz-linear-gradient( 9deg, rgb(37,72,112) 0%, rgb(20,47,81) 36%, rgb(2,21,50) 99%)
		background-image -webkit-linear-gradient( 9deg, rgb(37,72,112) 0%, rgb(20,47,81) 36%, rgb(2,21,50) 99%)
		background-image linear-gradient( 9deg, rgb(37,72,112) 0%, rgb(20,47,81) 36%, rgb(2,21,50) 99%)
		position relative
		overflow hidden
		margin-right 60px
		span
			position relative
			z-index 2
		&:before
			content ''
			position absolute
			display block
			top 0
			left 0
			right 0
			bottom 0
			z-index 1
			opacity 0
			transition(.4s ease)
			background-image -moz-linear-gradient( 189deg, rgb(37,72,112) 0%, rgb(20,47,81) 36%, rgb(2,21,50) 99%)
			background-image -webkit-linear-gradient( 189deg, rgb(37,72,112) 0%, rgb(20,47,81) 36%, rgb(2,21,50) 99%)
			background-image linear-gradient( 189deg, rgb(37,72,112) 0%, rgb(20,47,81) 36%, rgb(2,21,50) 99%)
		&:hover
			color $white
			&:before
				opacity 1
	&__menu
		position absolute
		width 29px
		height 18px
		display block
		right 0
		top 50%
		transform(translateY(-50%))
		cursor pointer
		z-index 4
		span
			display block
			position absolute
			width 100%
			height 2px
			left 0
			background-color #606060
			transition(.3s)
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 50%
				margin-top -1px
			&:last-child
				top 100%
				margin-top -2px
		&--active
			span
				&:nth-child(2)
					opacity 0
				&:first-child
					transform(rotate(-45deg))
					top 50%
					margin-top -2px
				&:last-child
					transform(rotate(45deg))
					top 50%
	&--active
		box-shadow(0 2px 6px 0 rgba(0, 0, 0, 0.08))
	@media (min-width: 768px)
		&__menu
			display none
		&__btn
			margin 0
